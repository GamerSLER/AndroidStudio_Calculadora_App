<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLV1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLV2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLH1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLH2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLH3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/GLH1"
        app:layout_constraintLeft_toRightOf="@+id/GLV2"
        app:layout_constraintRight_toLeftOf="@+id/GLV1"
        app:layout_constraintTop_toBottomOf="@+id/GLH3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/B_borrar"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="AC" />

            <Button
                android:id="@+id/B_negativo_positivo"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="%" />

            <Button
                android:id="@+id/B_porcentaje"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="+/-" />

            <Button
                android:id="@+id/B_Dividir"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:text="รท"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textSize="30dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/button24"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="7"
                android:textSize="40dp" />

            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="8" />

            <Button
                android:id="@+id/button26"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="9" />

            <Button
                android:id="@+id/button27"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="ร" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/button39"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="4" />

            <Button
                android:id="@+id/button38"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="5" />

            <Button
                android:id="@+id/button37"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="6" />

            <Button
                android:id="@+id/button36"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="-"
                android:textSize="40dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/button35"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="1" />

            <Button
                android:id="@+id/button34"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="2" />

            <Button
                android:id="@+id/button33"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="3" />

            <Button
                android:id="@+id/button32"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/button41"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:text="0"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_span="2" />

            <Button
                android:id="@+id/button40"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_column="2"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="," />



            <!--            <Button-->
            <!--                android:id="@+id/button42"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="70dp"-->
            <!--                android:textSize="40dp"-->
            <!--                android:text="=" />-->

            <Button
                android:id="@+id/button43"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="=" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>